.panel.panel-default
  .panel-heading Edytuj profil
  .panel-body
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal' }, wrapper: :horizontal_form) do |f|
      = f.error_notification
      .form-inputs
        = f.input :username, required: true
        = f.input :email, required: true, autofocus: true
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.input :password, autocomplete: "off", hint: "pozostaw puste, jeśli nie chcesz zmieniać", required: false
        = f.input :password_confirmation, required: false
        = f.input :current_password, hint: "potrzebujemy obecnego hasła, aby zapisać zmiany", required: true
      .form-actions
        = f.button :submit, "Zapisz"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
= link_to "Back", :back