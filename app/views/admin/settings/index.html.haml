%p= link_to 'Dodaj nowe ustawienia', new_admin_setting_path, class: 'btn btn-default'

%table.table.table-striped.table-hover.records-index{ :'data-provides' => 'rowlink' }
  %tbody
    %tr
      %th Nazwa
      %th Wartość
      %th
      %th
    - @settings.each do |setting|
      %tr
        %td= setting.name
        %td= setting.value
        %td
          = link_to edit_admin_setting_path(setting) do
            %span.glyphicon.glyphicon-pencil
        %td
          = link_to admin_setting_path(setting), method: :delete, data: { confirm: 'Jesteś pewien?' } do
            %span.glyphicon.glyphicon-trash
